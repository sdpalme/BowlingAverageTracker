<Page x:ConnectionId='1'
    x:Class="BowlingAverageTracker.EditNamePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BowlingAverageTracker"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    DataContext="{Binding Path=EditNamePage, Source={StaticResource ViewModelLocator}}"                    >

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="75"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="55"/>
        </Grid.RowDefinitions>
        <TextBlock x:ConnectionId='2' x:Name="Title" Margin="43,10,42,10" Grid.Row="0" TextWrapping="Wrap" Text="Name" VerticalAlignment="Center" HorizontalAlignment="Center"
                   FontSize="29.333" FontStyle="Italic"/>
        <TextBox x:ConnectionId='3' Grid.Row="1" x:Name="NameBox" Height="46" Margin="20,20,20,260" TextWrapping="Wrap"                                    VerticalAlignment="Center"
                 HorizontalAlignment="Center" Width="275" InputScope="Text" FontSize="24"/>
        <Button x:ConnectionId='4' Grid.Row="1" x:Name="SaveBtn" Content="Save" HorizontalAlignment="Center" Margin="85,206,84,250" VerticalAlignment="Center" Width="130" Height="40"
                                     />
    </Grid>
</Page>

