<Page
    x:Class="BowlingAverageTracker.EditNamePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BowlingAverageTracker"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    DataContext="{Binding Path=EditNamePage, Source={StaticResource ViewModelLocator}}" Loaded="pageLoaded">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="75"/>
            <RowDefinition Height="175"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="65"/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="Title" Margin="43,10,42,10" Grid.Row="0" TextWrapping="Wrap" Text="Name" VerticalAlignment="Center" HorizontalAlignment="Center"
                   FontSize="29.333" FontStyle="Italic" Height="42"/>
        <TextBox Grid.Row="1" x:Name="NameBox" Height="46" Margin="0,0,0,0" TextWrapping="Wrap" Text="{x:Bind ViewModel.Dto.Name}" VerticalAlignment="Center"
                 HorizontalAlignment="Center" Width="275" InputScope="Text" FontSize="24"/>
        <Button Grid.Row="2" x:Name="SaveBtn" Content="Save" HorizontalAlignment="Center" Margin="0,0,0,0" VerticalAlignment="Top" Width="150" Height="50"
                Click="SaveBtn_Click"/>
    </Grid>
</Page>
